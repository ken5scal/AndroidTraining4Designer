<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kengo.android4designer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayoutExampleActivity"
            android:label="@string/title_activity_linear_layout_example" >
        </activity>
        <activity
            android:name=".RelativeLayoutExampleActivity"
            android:label="@string/title_activity_relative_layout_example" >
        </activity>
        <activity
            android:name=".FrameLayoutExampleActivity"
            android:label="@string/title_activity_frame_layout_example" >
        </activity>
        <activity
            android:name=".AssignmentActivity"
            android:label="@string/title_activity_assignment" >
        </activity>
        <activity
            android:name=".NonLayoutActivity"
            android:label="@string/title_activity_non_layout" >
        </activity>
    </application>

</manifest>
